@using Tsi.Template.ViewModels.Common;
@model LoginModel;

@{
    Layout = "_LoginLayout";
    var returnUrl = @Context.Request.Query["returnUrl"];
}
 
<h2>Login</h2>

<div class="card">
    <div class="card-body">
        <form asp-controller="Account" asp-action="Login" method="post" asp-route-returnurl="@returnUrl">

            @if (Model.UserNameEnabled)
            {
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Username)
                    <input type="text" id="Username" name="Username" class="form-control" value="@Model.Username" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            }
            else
            {
                <div class="form-group">
                    @Html.DisplayNameFor(model => model.Email)
                    <input type="text" id="Email" name="Email" class="form-control" value="@Model.Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            }

            <div class="form-group">
                @Html.DisplayNameFor(model => model.Password)
                <input type="password" id="Password" name="Password" class="form-control" value="@Model.Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div asp-validation-summary="All"></div>
            </div>
            <div class="form-group text-center">
                <button type="submit" name="save" class="btn btn-primary col-md-3">
                    <i class="far fa-save"></i> Login
                </button>
            </div>
        </form>
    </div>
</div>