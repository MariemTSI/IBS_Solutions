@using Tsi.Template.ViewModels;
@model PaysViewModel

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="card card-primary">

    <div class="card-header">
        <h3 class="card-title">Create Pays</h3>
    </div>

    <form asp-controller="Pays" asp-action="Create" method="post" role="form">
        <div class="card-body" asp-validation-summary="All">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Code)
                <input type="text" id="Code" name="Code" class="form-control" value="@Model.Code" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Nom)
                <input type="text" id="Nom" name="Nom" class="form-control" value="@Model.Nom" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputFile">  @Html.DisplayNameFor(model => model.SymboleMonetaire)</label>
                <input type="text" id="SymboleMonetaire" name="SymboleMonetaire" class="form-control" value="@Model.SymboleMonetaire" />
                <span asp-validation-for="SymboleMonetaire" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputFile">  @Html.DisplayNameFor(model => model.NbreDecimales)</label>
                <input type="text" id="NbreDecimales" name="NbreDecimales" class="form-control" value="@Model.NbreDecimales" />
                <span asp-validation-for="NbreDecimales" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputFile">  @Html.DisplayNameFor(model => model.Observation)</label>
                <input type="text" id="Observation" name="Observation" class="form-control" value="@Model.Observation" />
                <span asp-validation-for="Observation" class="text-danger"></span>
            </div>

            

        </div>

        <div class="card-footer">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i> Save
            </button>
        </div>
    </form>
</div>