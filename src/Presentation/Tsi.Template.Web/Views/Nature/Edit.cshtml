@using Tsi.Template.ViewModels;

@model NatureViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Edit Nature</h5>
        <form asp-controller="Nature" asp-action="Edit" method="post">

            <div class="form-group">
                @Html.DisplayNameFor(model => model.Code)
                <input type="text" id="Code" name="Code" class="form-control" value="@Model.Code" />

                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Nom)
                <input type="text" id="Nom" name="Nom" class="form-control" value="@Model.Nom" />

                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.CodeSurDeclaration)
                <input type="text" id="CodeSurDeclaration" name="CodeSurDeclaration" class="form-control" value="@Model.CodeSurDeclaration" />

                <span asp-validation-for="CodeSurDeclaration" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Observation)
                <input type="text" id="Observation" name="Observation" class="form-control" value="@Model.Observation" />

                <span asp-validation-for="Observation" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" name="save" class="btn btn-primary col-md-3">
                    <i class="far fa-save"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>
