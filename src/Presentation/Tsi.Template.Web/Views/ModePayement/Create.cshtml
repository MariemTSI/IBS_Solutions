@using Tsi.Template.ViewModels;
@model ModePayementViewModel

@{ Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml"; }

<div class="card card-primary">

    <div class="card-header">
        <h3 class="card-title">Create Mode Payement</h3>
    </div>

    <form asp-controller="Product" asp-action="Create" method="post" role="form">
        <div class="card-body" asp-validation-summary="All">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Code)
                <input type="text" id="Code" name="Code" class="form-control" value="@Model.Code" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.CodeSurDeclarationTVA)
                <input type="text" id="Libelle" name="Libelle" class="form-control" value="@Model.CodeSurDeclarationTVA" />
                <span asp-validation-for="CodeSurDeclarationTVA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputFile">  @Html.DisplayNameFor(model => model.Nom)</label>
                <input type="text" id="Price" name="Price" class="form-control" value="@Model.Nom" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputFile">  @Html.DisplayNameFor(model => model.Observation)</label>
                <input type="text" id="Price" name="Price" class="form-control" value="@Model.Observation" />
                <span asp-validation-for="Observation" class="text-danger"></span>
            </div>

        </div>

        <div class="card-footer">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i> Save
            </button>
        </div>
    </form>
</div>