@using Tsi.Template.ViewModels;
@model ModePayementViewModel

@{ Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml"; }

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Create Mode Payement</h5>
        <form asp-controller="Product" asp-action="Edit" method="post">
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Code)
                <input type="text" id="Code" name="Code" class="form-control" value="@Model.Code" disabled />
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.CodeSurDeclarationTVA)
                <input type="text" id="Libelle" name="Libelle" class="form-control" value="@Model.CodeSurDeclarationTVA" />
                <span asp-validation-for="CodeSurDeclarationTVA" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Nom)
                <input type="text" id="Price" name="Price" class="form-control" value="@Model.Nom" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.DisplayNameFor(model => model.Observation)
                <input type="text" id="Price" name="Price" class="form-control" value="@Model.Observation" />
                <span asp-validation-for="Observation" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" name="save" class="btn btn-primary col-md-3">
                    <i class="far fa-save"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>
